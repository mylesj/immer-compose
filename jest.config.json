{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "restoreMocks": true,
    "fakeTimers": {
        "enableGlobally": true
    },
    "moduleNameMapper": {
        "~/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
        "<rootDir>/src/**/*.{ts,tsx}",
        "!<rootDir>/node_modules/**"
    ],
    "setupFiles": ["./jest.setup.js"]
}
